{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "paths": {
      "@app/*": ["src/app/*"]
    },
    "typeRoots": ["./src/typings"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
